	};

section#pf-menu.pf-menu
	.c-grid

		form(action='' method='' autocomplete='off')

			.pf-menu__wrapper

				p.pf-menu__title New menu section

				.pf-menu__form.pf-menu__form-1

					.pf-menu__form-row
						.pf-menu__form-col.pf-menu__form-col-1

							.pf-menu__form-field.pf-menu__form-field--inputWStatus.pf-menu__form-field-1
								div
									+formInput(dataFormObj.inputMenuName)
								div

									.pf-menu__status
										p Status:
										div
											.pf-menu__status-btn
												input(type="checkbox")
												label
													p
														span off
														span on
													i

							.pf-menu__form-field.pf-menu__form-field--twoSelect.pf-menu__form-field-2
								div
									+formSelectCustom(dataFormObj.selectFieldCustomServingFrom)
								div
									+formSelectCustom(dataFormObj.selectFieldCustomServingTo)

							.pf-menu__form-field.pf-menu__form-field--oneSelect.pf-menu__form-field-3
								+formSelectCustom(dataFormObj.selectFieldCustomPrixFixeMenu)

						.pf-menu__form-col.pf-menu__form-col-2

							.pf-menu__upload
								p Add photo
								input(type='file' accept="image/jpg, image/jpeg")

				p.pf-menu__subtitle Prix-fixe menu settings

				.pf-menu__form.pf-menu__form-2

					.pf-menu__form-field.pf-menu__form-field--price.pf-menu__form-field-4
						.pf-menu__price
							p Meal Price:
							div
								+formInput(dataFormObj.inputMealPrice)

					.pf-menu__form-field.pf-menu__form-field--details.pf-menu__form-field-5

						.pf-menu__details
							div
								p Appetizer
							div
							a(href="#" class="" title="")
								i.icon-font.icon-waste-bin

					.pf-menu__form-field.pf-menu__form-field--inputWButton.pf-menu__form-field-6
						div
							+formInput(dataFormObj.inputCourseName)
						div
							a.pf-menu__add(href="#" class="" title="")!= "Add course"

				.pf-menu__form.pf-menu__form-3
					button.pf-menu__btn(type="submit") Save


// SECTION prix-fixe menu :: END
