			uniqueName: "input_course_name",
			labelVal: "Course Name",
			inputType: "",
			inputClassMod: "",
			placeholderVal: "",
			val: ""
		},
		inputMealPrice: {
			classMod: "",
			uniqueName: "input_meal_price",
			labelVal: "$0",
			inputType: "",
			inputClassMod: "",
			placeholderVal: "",
			val: ""
		},
		selectFieldCustomServingFrom: {
			classMod: "",
			uniqueName: "select_serving_from",
			labelVal: "",
			selectClassMod: "",
			selectOption: [
			'Some option',
			'Some action',
