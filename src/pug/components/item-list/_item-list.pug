section#itemList.itemList
	.c-grid
		.itemList__wrapper

			.itemList__header
				div
					h2.itemList__title Greens
				div
				div
					a.itemList__header-setting(href="#" class="" title="")
						i.icon-font.icon-settings
						span Settings
					a.itemList__header-new(href="#" class="" title="")
						span +
						p new item

			.itemList__box-wrapper
				div
					.itemList__box
						.itemList__box-head
							div
								span Item
								p Kale
							div
								span Stock left
								p.red 0.54 lb
							div
								span Action
								.btn
									a.edit(href="#" class="" title="")
										i.icon-font.icon-pencil
									a.remove(href="#" class="" title="")
										i.icon-font.icon-waste-bin
						.itemList__box-body
							.itemList__box-body-cover
								div
									span Stock
									.range
										a.range__btn(href="#" class="" title="")!= "-"
