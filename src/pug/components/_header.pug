// HEADER :: START

header#header.header

	.header__wrapper

		.header__wrapper-top
			.logo.logo--header
				a.logo__btn(href="/" class="" title="")
					img.logo__img(src="img/logo.svg" alt="" title="")
					span!= "Dinner Bell"

		.header__wrapper-left
			+hamburgerCustom()

			h1.header__title!= "Section title"

		.header__wrapper-right

			.header__dropdown(dropdown-js)
				.header__dropdown-toggle(dropdown-btn-js)
					span!= "Blue Strawberry"
				.header__dropdown-menu(dropdown-menu-js)
					a.header__dropdown-item(href="#" class="" title="")!= "Company profile"
					a.header__dropdown-item(href="#" class="" title="")!= "Login & Security"
					a.header__dropdown-item(href="#" class="" title="")!= "TeamBilling Center"
					a.header__dropdown-item(href="#" class="" title="")!= "Tablet Settings"
					a.header__dropdown-item(href="#" class="" title="")!= "Help"
					a.header__dropdown-item(href="#" class="" title="")!= "Report a bug"
					a.header__dropdown-item(href="#" class="" title="")!= "Leave feedback"
					a.header__dropdown-item(href="#" class="" title="")!= "Log Out"

			.header__nav
				.header__nav-title
					h1.header__title!= "Section title"
				.header__nav-wrapper
					a.header__nav-btn.header__nav-btn--setting(href="#" class="" title="")
						i.icon-png.i-setting-1
					a.header__nav-btn.header__nav-btn--qrcode(href="#" class="" title="")
						i.icon-png.i-qrcode
					a.header__nav-btn.header__nav-btn--team(href="#" class="" title="")
						i.icon-png.i-team
					a.header__nav-btn.header__nav-btn--notification(href="#" class="" title="")
						i.icon-png.i-notification

// HEADER :: END
