// SECTION tablet :: START

.tablet--scroll
	section#tablet.tablet.tablet--intro(tablet-introScreen-js)
			.tablet__content
				div
					.tablet__wrapper-bg(introScreen-container-js introScreen-bg-js tablet-bg-js data-intro-name='bg')
						.tablet__logo
							img(src="" alt="" title="" introScreen-logo-js)

					.tablet__wrapper-slideshow(introScreen-container-js introScreen-slideshow-js data-intro-name='slideshow')

						mixin swiperContent()
							.swiper-slide
							.swiper-slide
							.swiper-slide
							.swiper-slide
							.swiper-slide
							.swiper-slide

						+swiper('swiper-container-intro', 'swiperContent', true, false, false)

					.tablet__wrapper-video(introScreen-container-js introScreen-video-js data-intro-name='video')

						video(autoplay, loop, muted)
							source(src='', type='')

						.tablet__wrapper-video-cover
							.tablet__logo
								img(src="" alt="" title="" introScreen-logo-js)

			.tablet__footer
				a(href="#" class="" title="")!= "Get started!"

// SECTION tablet :: END
