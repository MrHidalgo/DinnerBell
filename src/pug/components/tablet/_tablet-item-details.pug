	.tablet__content
		.tablet__banner

		.tablet__content-cover(tablet-bg-js)

			.tablet__heading
				.tablet__heading--top
					.tablet__heading--left
						p(itemTitle-js)!= "Fresh florida stone crab clams"
				.tablet__heading--bottom
					span(description-js)!= "Sushi-grade tuna, avocado, seaweed salad, forbidden rice, dynamite sauce, and honey wasabi aioli"

			p.tablet__sibtitle(modifierTitle-js)!= "Portion size"

			.tablet__radio-group
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Small"
							span!= "$8"
							i!= "2-3 oz ∙ 440 cal"
					div
						label
							input(type='radio' name='portion_size' checked)
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Medium"
							span!= "$12"
							i!= "3-5 oz ∙ 510 cal"
					div
						label
							input(type='radio' name='portion_size')
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Large"
							span!= "$18"
							i!= "5-9 oz ∙ 730 cal"
					div
						label
							input(type='radio' name='portion_size')
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Extra Large"
							span!= "$20"
							i!= "9-12 oz ∙ 1230 cal"
					div
						label
							input(type='radio' name='portion_size')
							span

			.tablet__range-wrapper
				.tablet__range
					div
						p.tablet__sibtitle!= "Spice level"
						span!= "Medium"
					div
						input(type="text")
				.tablet__range
					div
						p.tablet__sibtitle!= "Temperature"
						span!= "Rare"
					div
						input(type="text")


			p.tablet__sibtitle(modifierTitle-js)!= "Dressing options"

			.tablet__radio-group
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Italian Dressing"
							i!= "40 cal"
					div
						label
							input(type='radio' name='dressing_options' checked)
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "LowFat Italian"
							i!= "20 cal"
					div
						label
							input(type='radio' name='dressing_options')
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Oil & Vinegar"
							i!= "30 cal"
					div
						label
							input(type='radio' name='dressing_options')
							span

			p.tablet__sibtitle(modifierTitle-js)!= "On the side"

			.tablet__box-wrapper
				a.tablet__box.is-choose(href="#" class="" title="")
