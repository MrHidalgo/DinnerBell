						span!= "<i>$5</i> ∙ 99 cal"

			p.tablet__sibtitle(modifierTitle-js)!= "Beverage"

			.tablet__radio-group
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Green tea"
					div
						label
							input(type='radio' name='beverage' checked)
							span
				.tablet__radio-group-field
					div
						p
							strong(modifierText-js)!= "Black tea"
					div
						label
							input(type='radio' name='beverage')
