							a(href="#" class="" title="")
								i.icon-font.icon-pencil
						div
							i.icon-png.i-image
							p Image
						div
							a(href="#" class="" title="")
								i.icon-font.icon-waste-bin

					.customization__ingredients-add
						div
							+formSelectCustom(dataFormObj.selectFieldCustomCategory)
						div
							+formSelectCustom(dataFormObj.selectFieldCustomSelectorType)
						div
							a(href="#" class="" title="") Add category

