// SECTION mds :: START

-
	var colorTitleArr = [
		[
			{
				title: 'Spicy',
				color: '#c13548',
				name: 'spicy'
			},
			{
				title: 'Popular',
				color: '#33a457',
				name: 'popular'
			},
			{
				title: 'Chefâ€™s special',
				color: '#ebba19',
				name: 'chefsSpecial'
			},
			{
				title: 'New',
				color: '#7b7fe7',
				name: 'new'
			}
		],
	];

section#mds.mds

	.mds__wrapper
		.mds__wrapper-left

			.mds__wrapper-heading

				.mds__title-wrapper(dropdown-js)
					.mds__title.mds__title--internal(dropdown-btn-js)
						span!= "Menu items"
						i.icon-font.icon-corner
					.mds__title-drop(dropdown-menu-js)
						a(href="menu-design-setting.html#" class="" title="")!= "Base theme"
						a(href="menu-design-setting-1.html" class="" title="")!= "Base settings"
						a(href="menu-design-setting-2.html" class="" title="")!= "Intro screen"
						a(href="menu-design-setting-3.html" class="" title="")!= "Main menu"
						a(href="menu-design-setting-5.html" class="" title="")!= "Item details"
						a(href="menu-design-setting-6.html" class="" title="")!= "Feedback"
						a(href="menu-design-setting-7.html" class="" title="")!= "My order"
						a(href="menu-design-setting-8.html" class="" title="")!= "Log Out"

				a.mds__wrapper-preview(href="#" class="" title="")
					p
						i.icon-font.icon-eye
					span!= "preview"

			form.c-form(action="" autocomplete='off')

				.mds__screen.mds__screen--nc.mds__screen--wbbs
					p.mds__screen-title!= "Background image"
					.mds__screen-row
						.mds__screen-col.mds__screen-col-0
							p.mds__screen-desc!= "Image dimensions: 768x1024<br>Supported Formats: JPG, PNG"
						.mds__screen-col.mds__screen-col-1
							a(href="#" title='').mds__screen-upload!= "Upload images"

				p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Font size"

				.mds__fontSize-wrapper

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Section header"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								input.mds__fontSize-input(type='text', name='', value='')
							div
								p!= "a"

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Subsection"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								input.mds__fontSize-input(type='text', name='', value='')
							div
								p!= "a"

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Item title"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								input.mds__fontSize-input(type='text', name='', value='')
							div
								p!= "a"

					p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Label colors"

					each val, idx in colorTitleArr
						.mds__form-content
							each _v, _i in colorTitleArr[idx]
								.mds__form-color
									div
										p!= colorTitleArr[idx][_i].title
									div
										.mds__form-color-content(data-color!= colorTitleArr[idx][_i].color, data-name!= colorTitleArr[idx][_i].name)
											a(href="#" class="" title="")
											input(type="text" readonly disabled value!= colorTitleArr[idx][_i].color)
											span(style="background-color:" + colorTitleArr[idx][_i].color)

					p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Menu Layout"

					.mds__menu-wrapper.mds__menu-wrapper--menuItems
						a.mds__menu.is-active(href="#" class="" title="" data-name='list')!= "List"
						a.mds__menu(href="#" class="" title="" data-name='thumb')!= "Thumbnails"

				+formBtn('', 'c-btn c-btn--bg', 'Update settings')

		.mds__wrapper-right

			.mds__wrapper-header
				div
					i.icon-font.icon-eye
					p!= "Midnight Theme"
				div
					a.mds__wrapper-close(href="#" class="" title="")
						i.icon-font.icon-close

			include ../tablet/_tablet-menu-items

// SECTION mds :: END
