// SECTION mds :: START

-
	var colorTitleArr = [
		[
			{
				title: 'Spicy',
				color: '#c13548',
				name: 'spicy'
			},
			{
				title: 'Popular',
				color: '#33a457',
				name: 'popular'
			},
			{
				title: 'Chefâ€™s special',
				color: '#ebba19',
				name: 'chefsSpecial'
			},
			{
				title: 'New',
				color: '#7b7fe7',
				name: 'new'
			}
		],
	];

section#mds.mds

	.mds__wrapper
		.mds__wrapper-left

			.mds__wrapper-heading

				.mds__title-wrapper(dropdown-js)
					.mds__title.mds__title--internal(dropdown-btn-js)
						span!= "Menu items"
						i.icon-font.icon-corner
					.mds__title-drop(dropdown-menu-js)
						a(href="menu-design-setting.html#" class="" title="")!= "Base theme"
						a(href="menu-design-setting-1.html" class="" title="")!= "Base settings"
						a(href="menu-design-setting-2.html" class="" title="")!= "Intro screen"
						a(href="menu-design-setting-3.html" class="" title="")!= "Main menu"
						a(href="menu-design-setting-5.html" class="" title="")!= "Item details"
						a(href="menu-design-setting-6.html" class="" title="")!= "Feedback"
						a(href="menu-design-setting-7.html" class="" title="")!= "My order"
						a(href="menu-design-setting-8.html" class="" title="")!= "Log Out"

				a.mds__wrapper-preview(href="#" class="" title="")
					p
						i.icon-font.icon-eye
					span!= "preview"

			form.c-form(action="" autocomplete='off')

				.mds__upload.mds__upload--hi(upload-file-js)
					p.mds__upload-title.mds__screen-title!= "Background"

					.mds__upload-wrapper.mds__upload-wrapper--double.mds__upload-wrapper--main(upload-main-js)
						.mds__upload-left
							p.mds__upload-subtitle!= "Color"
							.mds__upload-color(change-bg-js data-default-color="#161616")
								a(href="#" class="" title="")
								span

						.mds__upload-right
							p.mds__upload-subtitle!= "Background image"
							.mds__upload-bg(change-imageParent-js)
								div(change-img-js)
									span!= "Upload image"
									input(type='file' accept=".jpg, .jpeg, .png" name='upload_')

					.mds__upload-wrapper.mds__upload-wrapper--double.mds__upload-wrapper--additional(upload-additional-js)
						div
							.mds__upload-left
								.mds__upload-preview(upload-preview-js)
									p!= "image<br>preview"

							.mds__upload-right

								.mds__upload-option

									.mds__upload-radio
										div
											label
												input(type='radio' name='upload_image_size' checked upload-imgFixed-js)
												span!= "Fixed position"
										div
											label
												input(type='radio' name='upload_image_size' upload-imgRepeat-js)
												span!= "Repeat / Tile image"

									a.mds__upload-remove(href="#" class="" title="" upload-remove-js)
										i.icon-font.icon-bin
										span!= "Remove image"

				p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Font properties"

				.mds__fontSize-wrapper

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Section header"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								#menuItemsFSSectionHeader
							div
								p!= "a"
						.mds__fontSize-col.mds__fontSize-col-2(data-name='sectionHeader')
							a(href="#" class="" title="")

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Subsection"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								#menuItemsFSSubsection
							div
								p!= "a"
						.mds__fontSize-col.mds__fontSize-col-2(data-name='subsection')
							a(href="#" class="" title="")

					.mds__fontSize-row
						.mds__fontSize-col.mds__fontSize-col-0
							p.mds__fontSize-name!= "Item title"
						.mds__fontSize-col.mds__fontSize-col-1
							div
								span!= "a"
							div
								#menuItemsFSItemTitleMenu
							div
								p!= "a"
						.mds__fontSize-col.mds__fontSize-col-2(data-name='itemTitleMenu')
							a(href="#" class="" title="")

					p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Label colors"

					each val, idx in colorTitleArr
						.mds__form-content
							each _v, _i in colorTitleArr[idx]
								.mds__form-color.mds__form-color--winput
									div
										p!= colorTitleArr[idx][_i].title
									div.is-one
										.mds__form-color-content(data-color!= colorTitleArr[idx][_i].color, data-name!= colorTitleArr[idx][_i].name)
											a(href="#" class="" title="")
											span(style="background-color:" + colorTitleArr[idx][_i].color)

					p.mds__subtitle.mds__subtitle--mdsMenuItemPt!= "Menu Layout"

					.mds__menu-wrapper.mds__menu-wrapper--menuItems
						a.mds__menu.is-active(href="#" class="" title="" data-name='list')!= "List"
						a.mds__menu(href="#" class="" title="" data-name='thumb')!= "Thumbnails"

				+formBtn('', 'c-btn c-btn--bg', 'Update settings')

		.mds__wrapper-right

			.mds__wrapper-header
				div
					i.icon-font.icon-eye
					p!= "Midnight Theme"
				div
					a.mds__wrapper-close(href="#" class="" title="")
						i.icon-font.icon-close

			include ../tablet/_tablet-menu-items

// SECTION mds :: END
