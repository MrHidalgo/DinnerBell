// SECTION mds :: START

section#mds.mds

	.mds__wrapper
		.mds__wrapper-left

			.mds__wrapper-heading
				h2.mds__title.mds__title--internal
					span!= "Intro screen"
					i.icon-font.icon-corner
				a.mds__wrapper-preview(href="#" class="" title="")
					p
						i.icon-font.icon-eye
					span!= "preview"

			form.c-form(action="" autocomplete='off')

				.mds__screen-wrapper
					a.mds__screen.is-choose(href="#" class="" title="" data-name='bg')
						p.mds__screen-title!= "Static image"
						.mds__screen-row
							.mds__screen-col.mds__screen-col-0
								p.mds__screen-desc!= "Image dimensions: 768x1024<br>Supported Formats: JPG, PNG"
							.mds__screen-col.mds__screen-col-1
								.mds__screen-upload!= "Upload images"

					a.mds__screen(href="#" class="" title="" data-name='slideshow')
						p.mds__screen-title!= "Slideshow"
						.mds__screen-row
							.mds__screen-col.mds__screen-col-0
								p.mds__screen-desc!= "Image dimensions: 768x1024<br>Supported Formats: JPG, PNG<br>5 images maximum"
							.mds__screen-col.mds__screen-col-1
								.mds__screen-upload!= "Upload images"

					a.mds__screen(href="#" class="" title="" data-name='video')
						p.mds__screen-title!= "Video Intro"
						.mds__screen-row
							.mds__screen-col.mds__screen-col-0
								p.mds__screen-desc!= "Video dimensions: 768x1024<br>Supported Formats: AVI, MKV<br>Max file weight: 50 Mb"
							.mds__screen-col.mds__screen-col-1
								.mds__screen-upload!= "Upload images"

				+formBtn('', 'c-btn c-btn--bg', 'Update settings')

		.mds__wrapper-right

			.mds__wrapper-header
				div
					i.icon-font.icon-eye
					p!= "Midnight Theme"
				div
					a.mds__wrapper-close(href="#" class="" title="")
						i.icon-font.icon-close

			include ../tablet/_tablet-intro

// SECTION mds :: END
